<Page x:Class="TiroirCaisse.src.Views.Prestations.VisualisationPrestationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TiroirCaisse.src.Views.Prestations"
      mc:Ignorable="d" 
      d:DesignHeight="913" d:DesignWidth="987"
      Title="VisualisationPrestationPage">

    <Grid>

        <DataGrid Name="DataGrid" AutoGenerateColumns="False" ItemsSource="{Binding listPrestation, Mode=TwoWay}" IsReadOnly="True" KeyDown="DataGrid_KeyDown">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="cID" Binding="{Binding Id}" Header="ID" Width="0.5*" />
                <DataGridTextColumn x:Name="cName" Binding="{Binding Nom}" Header="Nom" Width="*"  />
                <DataGridTextColumn x:Name="cPrix" Binding="{Binding PrixTTC}" Header="Nom" Width="*"  />
                <DataGridTextColumn x:Name="cType" Binding="{Binding Type}" Header="Type" Width="*"  />
                <DataGridTextColumn x:Name="cListForfait" Binding="{Binding ListForfait}" Header="Stock" Width="*" />
                <DataGridTextColumn x:Name="cCategorie" Binding="{Binding Categorie}" Header="Seuil d'alerte" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
